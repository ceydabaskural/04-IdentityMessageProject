@model IdentityMessageProject.EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}

<section class="bg-white bg-opacity-90 p-8 shadow-2xl rounded-3xl w-full flex flex-col">
    <h2 class="text-2xl font-bold mb-6 text-purple-600 border-b-2 border-purple-300 pb-2">Email Details</h2>
    <div class="space-y-6 flex-grow">
        <div class="bg-gradient-to-r from-purple-100 to-blue-100 p-6 rounded-2xl shadow-md flex flex-col w-full h-full">
            <div class="text-lg font-semibold text-purple-700">Subject: <span class="text-black">Project Proposal</span></div> 
            <div class="text-sm text-gray-600 mt-2">
                From: <span class="font-semibold">@Model.ReciverMail</span></div>
        </div>
        <div class="text-sm text-gray-600 mt-2">To: <span class="font-semibold">You</span></div>
        <div class="text-sm text-gray-500 mt-2">Date: <span class="font-semibold">3:00 PM, 2025-02-25</span></div>
        <div class="mt-6 text-gray-800 flex-grow">
            <p><strong>Message:</strong></p>
            @Html.Raw(Model.Details)
        </div>
        <div class="mt-5 flex justify-between">

            <button onclick="window.location.href='@Url.Action("Reply", "Message", new { messageId = Model.MessageId })'" class="bg-gradient-to-r from-purple-500 to-blue-500 text-white p-3 rounded-xl hover:scale-105 transition-transform">Reply</button>

            <button onclick="window.location.href='@Url.Action("Sentbox", "Message")'" class="text-purple-600 hover:text-purple-800 transition">Back to Sentbox</button>
        </div>
    </div>
</section>






