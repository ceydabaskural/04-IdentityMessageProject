@model List<IdentityMessageProject.EntityLayer.Concrete.Message>

@{
    ViewData["Title"] = "Sentbox";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}


<section class="col-span-3 bg-white bg-opacity-90 p-8 shadow-2xl rounded-3xl">
    <h2 class="text-2xl font-bold mb-6 text-purple-600 border-b-2 border-purple-300 pb-2">Sentbox</h2>
    <div class="space-y-6">
        @foreach (var item in Model)
        {

            <div class="flex items-center justify-between p-5 bg-gradient-to-r from-purple-100 to-blue-100 rounded-2xl shadow-md hover:shadow-xl transition">
                <div class="flex items-center space-x-4" style="width: 60%;">
                    <!-- ReciverMail ve Subject için genişlik -->
                    <a href="/Message/Details/@item.MessageId" style="width: 40%;">
                        <!-- ReciverMail için genişlik -->
                        <span class="text-purple-700 font-semibold">@item.ReciverMail</span>
                    </a>
                    <a href="/Message/Details/@item.MessageId" style="width: 60%;"><span class="text-gray-900 text-sm">@item.Subject</span></a> <!-- Subject için genişlik -->
                </div>
                <div class="text-sm text-gray-500" style="width: 20%;">@item.Date.ToShortDateString()</div> <!-- Date için genişlik -->
                <a href="/Message/Details/@item.MessageId" class="text-purple-600 hover:text-purple-800 transition" style="width: 20%;">Details</a> <!-- Details için genişlik -->
            </div>

        }
    </div>
</section>






